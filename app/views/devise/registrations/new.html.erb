<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-center mb-8">
      <%= link_to root_path, class: "inline-flex items-center" do %>
        <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl flex items-center justify-center mr-3">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.102m0-4.242l1.102-1.102a4 4 0 715.656 5.656l-4 4a4 4 0 01-5.656 0"></path>
          </svg>
        </div>
        <span class="text-2xl font-bold text-gray-900">Linkazo</span>
      <% end %>
      
      <h2 class="mt-6 text-3xl font-bold text-gray-900">Create your account</h2>
      <p class="mt-2 text-lg text-gray-600">Start building your link tree today</p>
    </div>

    <div class="bg-white shadow-sm rounded-2xl border border-gray-100">
      <div class="px-8 py-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-8") do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="space-y-6">
            <div class="space-y-2">
              <%= f.label :display_name, "Display name", class: "block text-sm font-semibold text-gray-700" %>
              <%= f.text_field :display_name, autofocus: true, autocomplete: "name", 
                  class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition duration-200",
                  placeholder: "Your full name or preferred name" %>
            </div>
            
            <div class="space-y-2">
              <%= f.label :username, "Username", class: "block text-sm font-semibold text-gray-700" %>
              <%= f.text_field :username, autocomplete: "username", 
                  class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition duration-200",
                  placeholder: "Choose a unique username" %>
              <p class="mt-1 text-xs text-gray-500">This will be your profile URL: linkazo.com/<span class="font-mono">username</span></p>
            </div>
            
            <div class="space-y-2">
              <%= f.label :email, "Email address", class: "block text-sm font-semibold text-gray-700" %>
              <%= f.email_field :email, autocomplete: "email", 
                  class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition duration-200",
                  placeholder: "Enter your email" %>
            </div>
            
            <div class="space-y-2">
              <%= f.label :password, "Password", class: "block text-sm font-semibold text-gray-700" %>
              <%= f.password_field :password, autocomplete: "new-password", 
                  class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition duration-200",
                  placeholder: "Create a password" %>
              <% if @minimum_password_length %>
                <p class="mt-2 text-xs text-gray-500">Minimum <%= @minimum_password_length %> characters</p>
              <% end %>
            </div>
            
            <div class="space-y-2">
              <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-semibold text-gray-700" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                  class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition duration-200",
                  placeholder: "Confirm your password" %>
            </div>
          </div>

          <div class="mt-4">
            <%= f.submit "Create account", 
                class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-xl transition duration-200 transform hover:scale-[1.02]" %>
          </div>
        <% end %>
      </div>
      
      <div class="px-8 py-4 bg-gray-50 border-t border-gray-100 rounded-b-2xl">
        <div class="text-center">
          <p class="text-sm text-gray-600">
            Already have an account?
            <%= link_to "Sign in", new_session_path(resource_name), 
                class: "font-semibold text-blue-600 hover:text-blue-500 transition duration-200 ml-1" %>
          </p>
        </div>
      </div>
    </div>

    <div class="mt-8 text-center">
      <p class="text-sm text-gray-500">
        By signing up, you agree to our 
        <a href="#" class="text-blue-600 hover:text-blue-500 transition duration-200">Terms of Service</a>
        and
        <a href="#" class="text-blue-600 hover:text-blue-500 transition duration-200">Privacy Policy</a>
      </p>
    </div>
  </div>
</div>
