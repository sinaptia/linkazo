<!DOCTYPE html>
<html>
  <head>
    <title>Linkazo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#3B82F6">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <!-- Mobile-first responsive design -->
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
      body { font-family: 'Inter', sans-serif; }
    </style>
  </head>

  <body class="bg-gray-50 min-h-screen">
    <!-- Flash messages -->
    <% if notice %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 mx-4 mt-4" role="alert">
        <%= notice %>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 mx-4 mt-4" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <!-- Navigation for authenticated users -->
    <% if user_signed_in? %>
      <nav class="bg-white shadow-sm border-b">
        <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            <div class="flex items-center">
              <label class="text-lg font-semibold text-gray-900">Linkazo</label> 
            </div>
            <div class="flex items-center space-x-4">
              <%= link_to "Dashboard", dashboard_path, class: "text-gray-600 hover:text-gray-900" %>  
              <%= link_to "Settings", settings_path, class: "text-gray-600 hover:text-gray-900" %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, data: { "turbo-method": :delete }, class: "text-red-600 hover:text-red-800" %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
