<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 flex items-center justify-center px-6">
  <div class="max-w-lg w-full text-center">
    <div class="mb-12">
      <div class="inline-flex items-center mb-6">
        <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl flex items-center justify-center mr-4">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.102m0-4.242l1.102-1.102a4 4 0 715.656 5.656l-4 4a4 4 0 01-5.656 0"></path>
          </svg>
        </div>
        <h1 class="text-4xl font-bold text-gray-900">Linkazo</h1>
      </div>
      
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6 leading-tight">
        Your links, <span class="text-blue-600">beautifully organized</span>
      </h2>
      <p class="text-xl text-gray-600 leading-relaxed">
        Create your personalized link tree and share all your important links in one beautiful, customizable page.
      </p>
    </div>
    
    <div class="space-y-4">
      <%= link_to new_user_registration_path, 
          class: "group w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-4 px-8 rounded-xl transition duration-200 transform hover:scale-[1.02] block flex items-center justify-center" do %>
        <span class="mr-2">Get Started Free</span>
        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      <% end %>
      
      <%= link_to "Sign In", new_user_session_path, 
          class: "w-full bg-white hover:bg-gray-50 text-gray-900 font-semibold py-4 px-8 rounded-xl transition duration-200 border border-gray-200 hover:border-gray-300 block" %>
    </div>
  </div>
</div>
