<div class="min-h-screen" style="background: linear-gradient(135deg, <%= @user.secondary_color %>E6, <%= @user.secondary_color %>);">
  <div class="max-w-md mx-auto px-6 py-12 lg:py-16">
    <div class="text-center mb-10 lg:mb-12">
      <div class="mb-6">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "w-28 h-28 lg:w-32 lg:h-32 rounded-full mx-auto object-cover border-4 border-white" %>
        <% else %>
          <div class="w-28 h-28 lg:w-32 lg:h-32 rounded-full mx-auto bg-white/20 flex items-center justify-center border-4 border-white">
            <span class="text-3xl lg:text-4xl font-bold text-white"><%= @user.display_name.first.upcase %></span>
          </div>
        <% end %>
      </div>
      
      <h1 class="text-2xl lg:text-3xl font-bold text-white mb-2 tracking-tight"><%= @user.display_name %></h1>
      <p class="text-lg lg:text-xl text-white/90 font-medium mb-1">@<%= @user.username %></p>
      
      <% if @user.bio.present? %>
        <div class="text-white/85 mt-6 text-base lg:text-lg leading-relaxed max-w-sm mx-auto">
          <%= simple_format(@user.bio, {}, wrapper_tag: "div") %>
        </div>
      <% end %>
    </div>

    <div class="space-y-4 lg:space-y-5">
      <% @links.each do |link| %>
        <%= link_to link.url, target: "_blank", rel: "noopener noreferrer",
            class: "group block w-full bg-white/95 hover:bg-white rounded-2xl lg:rounded-3xl p-5 lg:p-6 transition-all duration-200 hover:scale-[1.01]" do %>
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <h3 class="font-bold text-gray-900 mb-1 text-base lg:text-lg truncate group-hover:text-opacity-80 transition-colors" style="color: <%= @user.primary_color %>"><%= link.title %></h3>
              <% if link.description.present? %>
                <p class="text-sm lg:text-base text-gray-700 leading-relaxed"><%= link.description %></p>
              <% end %>
            </div>
            <div class="ml-4 flex-shrink-0">
              <div class="w-8 h-8 lg:w-10 lg:h-10 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-200" style="background-color: <%= @user.primary_color %>20;">
                <svg class="w-4 h-4 lg:w-5 lg:h-5 transition-colors duration-200" style="color: <%= @user.primary_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
      
      <% if @links.empty? %>
        <div class="text-center py-16 lg:py-20">
          <div class="text-white/70">
            <div class="w-20 h-20 lg:w-24 lg:h-24 rounded-full bg-white/10 flex items-center justify-center mx-auto mb-6 border border-white/20">
              <svg class="w-8 h-8 lg:w-10 lg:h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.102m0-4.242l1.102-1.102a4 4 0 015.656 5.656l-4 4a4 4 0 01-5.656 0"></path>
              </svg>
            </div>
            <p class="text-xl lg:text-2xl font-medium mb-2">No links yet</p>
            <p class="text-base lg:text-lg opacity-80">Links will appear here when added</p>
          </div>
        </div>
      <% end %>
    </div>

    <div class="text-center mt-16 lg:mt-20 pt-8 border-t border-white/20">
      <p class="text-white/60 text-sm lg:text-base">
        Created with 
        <%= link_to "Linkazo", root_path, class: "text-white font-medium underline hover:no-underline transition-all hover:text-white/90" %>
      </p>
    </div>
  </div>
</div>

<style>
  body {
    font-family: '<%= @user.font_family %>', 'Inter', sans-serif;
  }
</style>
