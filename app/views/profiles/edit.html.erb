<div class="max-w-md mx-auto px-4 py-6">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-2">Profile Settings</h1>
    <p class="text-gray-600">Customize your profile and theme</p>
  </div>

  <%= form_with model: @user, url: settings_path, local: true, class: "space-y-6" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Profile Information -->
    <div class="bg-white rounded-lg border p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Profile Information</h2>
      
      <div class="space-y-4">
        <div>
          <%= form.label :username, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="flex">
            <span class="inline-flex items-center px-3 rounded-l-lg border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm">
              <%= request.base_url %>/
            </span>
            <%= form.text_field :username, 
                class: "flex-1 px-3 py-2 border border-gray-300 rounded-r-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "username" %>
          </div>
        </div>

        <div>
          <%= form.label :bio, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :bio, 
              rows: 3,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: "Tell people about yourself..." %>
        </div>

        <div>
          <%= form.label :avatar, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.file_field :avatar, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              accept: "image/*" %>
          <% if @user.avatar.attached? %>
            <div class="mt-2">
              <%= image_tag @user.avatar, class: "w-16 h-16 rounded-full object-cover" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Theme Customization -->
    <div class="bg-white rounded-lg border p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Theme Customization</h2>
      
      <div class="space-y-4">
        <div>
          <%= form.label :theme_primary_color, "Primary Color", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="flex items-center space-x-3">
            <%= form.color_field :theme_primary_color, 
                value: @user.primary_color,
                class: "h-10 w-20 border border-gray-300 rounded-lg cursor-pointer" %>
            <%= form.text_field :theme_primary_color, 
                value: @user.primary_color,
                class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "#3B82F6" %>
          </div>
        </div>

        <div>
          <%= form.label :theme_secondary_color, "Background Color", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="flex items-center space-x-3">
            <%= form.color_field :theme_secondary_color, 
                value: @user.secondary_color,
                class: "h-10 w-20 border border-gray-300 rounded-lg cursor-pointer" %>
            <%= form.text_field :theme_secondary_color, 
                value: @user.secondary_color,
                class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "#1F2937" %>
          </div>
        </div>

        <div>
          <%= form.label :theme_font_family, "Font Family", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :theme_font_family, 
              options_for_select([
                ['Inter (Default)', 'Inter'],
                ['Roboto', 'Roboto'],
                ['Open Sans', 'Open Sans'],
                ['Lato', 'Lato'],
                ['Montserrat', 'Montserrat'],
                ['Poppins', 'Poppins']
              ], @user.font_family),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "Save Changes", 
          class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition duration-200" %>
      
      <%= link_to "Cancel", dashboard_path, 
          class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-900 font-medium py-3 px-4 rounded-lg transition duration-200 text-center" %>
    </div>

    <!-- Preview Link -->
    <div class="text-center pt-4 border-t border-gray-200">
      <%= link_to "Preview Your Profile", profile_path(@user.username), 
          target: "_blank", 
          class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition duration-200" %>
    </div>
  <% end %>
</div>
