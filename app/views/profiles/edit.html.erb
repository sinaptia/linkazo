<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto px-6 py-12">
    <div class="mb-10 text-center">
      <h1 class="text-3xl font-bold text-gray-900 mb-3">Profile Settings</h1>
      <p class="text-lg text-gray-600">Customize your profile and make it uniquely yours</p>
    </div>

  <%= form_with model: @user, url: settings_path, local: true, class: "space-y-8" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
      <div class="flex items-center mb-6">
        <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-4">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <h2 class="text-xl font-bold text-gray-900">Profile Information</h2>
      </div>
      
      <div class="space-y-6">
        <div>
          <%= form.label :display_name, "Display Name", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <%= form.text_field :display_name, 
              class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500",
              placeholder: "Your full name or preferred name" %>
          <p class="mt-2 text-xs text-gray-500">This is how your name appears on your profile</p>
        </div>

        <div>
          <%= form.label :username, "Username", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <div class="flex rounded-xl overflow-hidden border border-gray-200 focus-within:border-blue-500 focus-within:ring-2 focus-within:ring-blue-500/20">
            <span class="inline-flex items-center px-4 bg-gray-50 text-gray-600 text-sm font-medium border-r border-gray-200">
              <%= request.base_url %>/
            </span>
            <%= form.text_field :username, 
                class: "flex-1 px-4 py-3 border-0 focus:ring-0 focus:outline-none",
                placeholder: "username" %>
          </div>
        </div>

        <div>
          <%= form.label :bio, "Bio", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <%= form.text_area :bio, 
              rows: 4,
              class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 resize-none",
              placeholder: "Tell people about yourself..." %>
          <p class="mt-2 text-xs text-gray-500">This will appear on your public profile</p>
        </div>

        <div>
          <%= form.label :avatar, "Profile Picture", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <% if @user.avatar.attached? %>
                <%= image_tag @user.avatar, class: "w-20 h-20 rounded-2xl object-cover ring-4 ring-gray-100" %>
              <% else %>
                <div class="w-20 h-20 rounded-2xl bg-gray-100 flex items-center justify-center ring-4 ring-gray-100">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
              <% end %>
            </div>
            <div class="flex-1">
              <%= form.file_field :avatar, 
                  class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500",
                  accept: "image/*" %>
              <p class="mt-2 text-xs text-gray-500">JPG, PNG or GIF. Max file size 5MB.</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8" data-controller="theme">
      <div class="flex items-center mb-6">
        <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center mr-4">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
          </svg>
        </div>
        <h2 class="text-xl font-bold text-gray-900">Theme Customization</h2>
      </div>
      
      <div class="space-y-6">
        <div>
          <%= form.label :theme_primary_color, "Primary Color", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <div class="flex items-center space-x-4">
            <%= form.color_field :theme_primary_color, 
                value: @user.primary_color,
                data: { theme_target: "primaryPicker" },
                class: "h-12 w-20 border-2 border-gray-200 rounded-xl cursor-pointer focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500" %>
            <%= form.text_field :theme_primary_color, 
                value: @user.primary_color,
                data: { theme_target: "primaryText" },
                class: "flex-1 px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 font-mono text-sm",
                placeholder: "#3B82F6" %>
          </div>
          <p class="mt-2 text-xs text-gray-500">Used for links and accent elements</p>
        </div>

        <div>
          <%= form.label :theme_secondary_color, "Background Color", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <div class="flex items-center space-x-4">
            <%= form.color_field :theme_secondary_color, 
                value: @user.secondary_color,
                data: { theme_target: "secondaryPicker" },
                class: "h-12 w-20 border-2 border-gray-200 rounded-xl cursor-pointer focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500" %>
            <%= form.text_field :theme_secondary_color, 
                value: @user.secondary_color,
                data: { theme_target: "secondaryText" },
                class: "flex-1 px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 font-mono text-sm",
                placeholder: "#1F2937" %>
          </div>
          <p class="mt-2 text-xs text-gray-500">Your profile's main background color</p>
        </div>

        <div>
          <%= form.label :theme_font_family, "Font Family", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <%= form.select :theme_font_family, 
              options_for_select([
                ['Inter (Default)', 'Inter'],
                ['Roboto', 'Roboto'],
                ['Open Sans', 'Open Sans'],
                ['Lato', 'Lato'],
                ['Montserrat', 'Montserrat'],
                ['Poppins', 'Poppins']
              ], @user.font_family),
              {},
              class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500" %>
          <p class="mt-2 text-xs text-gray-500">Choose the font style for your profile</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
      <div class="flex flex-col sm:flex-row gap-4">
        <%= form.submit "Save Changes", 
            class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-4 px-6 rounded-xl transition duration-200 transform hover:scale-[1.02] flex items-center justify-center" %>
        
        <%= link_to "Cancel", dashboard_path, 
            class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-900 font-semibold py-4 px-6 rounded-xl transition duration-200 transform hover:scale-[1.02] text-center flex items-center justify-center" %>
      </div>
      
      <div class="mt-6 pt-6 border-t border-gray-100 text-center">
        <%= link_to profile_path(@user.username), target: "_blank", 
            class: "inline-flex items-center px-6 py-3 bg-green-50 hover:bg-green-100 text-green-700 font-medium rounded-xl transition duration-200 border border-green-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          Preview Your Profile
        <% end %>
      </div>
    </div>
  <% end %>
</div>

