<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto px-6 py-12">
    <div class="mb-10 text-center">
      <h1 class="text-3xl font-bold text-gray-900 mb-3">Add New Link</h1>
      <p class="text-lg text-gray-600">Create a new link for your tree</p>
    </div>

  <%= form_with model: @link, local: true, class: "space-y-8" do |form| %>
    <% if @link.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @link.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
      <div class="flex items-center mb-6">
        <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-4">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.102m0-4.242l1.102-1.102a4 4 0 015.656 5.656l-4 4a4 4 0 01-5.656 0"></path>
          </svg>
        </div>
        <h2 class="text-xl font-bold text-gray-900">Link Details</h2>
      </div>

      <div class="space-y-6">
        <div>
          <%= form.label :title, "Title", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <%= form.text_field :title, 
              class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500",
              placeholder: "e.g., My Website, Instagram, YouTube" %>
          <p class="mt-2 text-xs text-gray-500">This will be displayed as the link button text</p>
        </div>

        <div>
          <%= form.label :url, "URL", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <%= form.url_field :url, 
              class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500",
              placeholder: "https://example.com" %>
          <p class="mt-2 text-xs text-gray-500">The destination when people click your link</p>
        </div>

        <div>
          <%= form.label :description, "Description", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <%= form.text_area :description, 
              rows: 4,
              class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 resize-none",
              placeholder: "Optional description for your link" %>
          <p class="mt-2 text-xs text-gray-500">Optional text that appears below the title</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
      <div class="flex items-center mb-6">
        <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center mr-4">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
          </svg>
        </div>
        <h2 class="text-xl font-bold text-gray-900">Settings</h2>
      </div>

      <div class="space-y-6">
        <div>
          <%= form.label :position, "Position", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <%= form.number_field :position, 
              class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500",
              placeholder: "Position in your link tree (optional)" %>
          <p class="mt-2 text-xs text-gray-500">Leave empty to add at the end. Lower numbers appear first.</p>
        </div>

        <div class="flex items-start">
          <div class="flex items-center h-5">
            <%= form.check_box :active, 
                class: "h-5 w-5 text-blue-600 focus:ring-blue-500/20 border-gray-300 rounded",
                checked: true %>
          </div>
          <div class="ml-3">
            <%= form.label :active, "Active", class: "text-sm font-semibold text-gray-700" %>
            <p class="text-xs text-gray-500">When active, this link will be visible on your public profile</p>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
      <div class="flex flex-col sm:flex-row gap-4">
        <%= form.submit "Create Link", 
            class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-4 px-6 rounded-xl transition duration-200 transform hover:scale-[1.02] flex items-center justify-center" %>
        
        <%= link_to "Cancel", dashboard_path, 
            class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-900 font-semibold py-4 px-6 rounded-xl transition duration-200 transform hover:scale-[1.02] text-center flex items-center justify-center" %>
      </div>
    </div>
  <% end %>
  </div>
</div>
