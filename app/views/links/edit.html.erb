<div class="max-w-md mx-auto px-4 py-6">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-2">Edit Link</h1>
    <p class="text-gray-600">Update your link details</p>
  </div>

  <%= form_with model: @link, local: true, class: "space-y-6" do |form| %>
    <% if @link.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @link.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "e.g., My Website, Instagram, YouTube" %>
    </div>

    <div>
      <%= form.label :url, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.url_field :url, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "https://example.com" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :description, 
          rows: 3,
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Optional description for your link" %>
    </div>

    <div>
      <%= form.label :position, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :position, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Position in your link tree" %>
    </div>

    <div class="flex items-center">
      <%= form.check_box :active, 
          class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= form.label :active, "Active (visible on your profile)", class: "ml-2 block text-sm text-gray-900" %>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "Update Link", 
          class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition duration-200" %>
      
      <%= link_to "Cancel", dashboard_path, 
          class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-900 font-medium py-3 px-4 rounded-lg transition duration-200 text-center" %>
    </div>
  <% end %>
</div>
