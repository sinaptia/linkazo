<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto px-6 py-12">
    <div class="mb-10 text-center">
      <h1 class="text-3xl font-bold text-gray-900 mb-3">Your Links</h1>
      <p class="text-lg text-gray-600">Manage and organize your link tree</p>
    </div>

    <div class="mb-8">
      <%= link_to new_link_path, 
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-4 px-6 rounded-xl transition duration-200 transform hover:scale-[1.02] flex items-center justify-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Add New Link
      <% end %>
    </div>

    <div class="space-y-5">
      <% @links.each do |link| %>
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
          <div class="flex items-start justify-between">
            <div class="flex-1 min-w-0">
              <div class="flex items-center mb-3">
                <h3 class="font-bold text-gray-900 truncate text-lg"><%= link.title %></h3>
                <% unless link.active? %>
                  <span class="ml-3 inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                    Inactive
                  </span>
                <% end %>
              </div>
              
              <p class="text-sm text-blue-600 truncate mb-3 font-medium">
                <%= link_to link.url, link.url, target: "_blank", rel: "noopener noreferrer", class: "hover:underline" %>
              </p>
              
              <% if link.description.present? %>
                <p class="text-sm text-gray-600 leading-relaxed mb-4"><%= link.description %></p>
              <% end %>
              
              <div class="flex items-center justify-between text-xs text-gray-500 pt-3 border-t border-gray-100">
                <div class="flex items-center space-x-4">
                  <span class="flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
                    </svg>
                    Position <%= link.position %>
                  </span>
                  <span>Updated <%= time_ago_in_words(link.updated_at) %> ago</span>
                </div>
              </div>
            </div>
            
            <div class="ml-6 flex items-center space-x-3">
              <%= link_to edit_link_path(link), 
                  class: "p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition duration-200" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
              
              <%= link_to link_path(link), method: :delete, 
                  data: { confirm: "Are you sure you want to delete this link?" },
                  class: "p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition duration-200" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      
      <% if @links.empty? %>
        <div class="text-center py-20">
          <div class="w-24 h-24 rounded-full bg-gray-100 flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.102m0-4.242l1.102-1.102a4 4 0 015.656 5.656l-4 4a4 4 0 01-5.656 0"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">No links yet</h3>
          <p class="text-gray-600 mb-8 max-w-md mx-auto">Start building your link tree by adding your first link. Share your social media, portfolio, or any important links.</p>
          <%= link_to "Add Your First Link", new_link_path, 
              class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl transition duration-200 transform hover:scale-[1.02]" %>
        </div>
      <% end %>
    </div>

    <% if @links.any? %>
      <div class="mt-12">
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
          <div class="text-center">
            <div class="flex items-center justify-center mb-4">
              <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center mr-3">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900">Share Your Link Tree</h3>
            </div>
            <p class="text-gray-600 mb-6">Your public profile is ready to share</p>
            
            <div class="bg-gray-50 rounded-xl p-4 mb-6">
              <code class="text-sm font-mono text-gray-800"><%= request.base_url %>/<%= current_user.username %></code>
            </div>
            
            <div class="flex flex-col sm:flex-row gap-3 justify-center">
              <%= link_to profile_path(current_user.username), target: "_blank", 
                  class: "inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-xl transition duration-200 transform hover:scale-[1.02]" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                View Public Profile
              <% end %>
              
              <%= link_to settings_path, 
                  class: "inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-900 font-semibold rounded-xl transition duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Customize Profile
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
